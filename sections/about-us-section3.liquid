<section class="about-author-slider">
	<div class="container">
		<div class="row">
			<div class="col">
				<div class="author-main-area">
					<div class="swiper-container" id="about-author">
						<div class="swiper-wrapper">
							{% for block in section.blocks %}
							<div class="swiper-slide">
								<div class="author-main">
									<div class="author-image">
										<span>
											<img width="{{ block.settings.author_image.width }}" height="{{ block.settings.author_image.height }}" class="img-fluid" src="{% if block.settings.author_image %}{{ block.settings.author_image | image_url }}{% else %}https://dummyimage.com/80x80/232323/999999{% endif %}" alt="">
										</span>
									</div>
									<div class="author-content">
										<div class="author-desc">
											{% if block.settings.author_desc != '' %}
											<h6>{{ block.settings.author_desc }}</h6>
											{% endif %}
										</div>
										<div class="author-name">
											{% if block.settings.author_name != '' %}
											<span class="name">{{ block.settings.author_name }}</span>
											{% endif %}
											{% if block.settings.author_subname != '' %}
											<span class="sub-name">{{ block.settings.author_subname }}</span>
											{% endif %}
										</div>
									</div>
								</div>
							</div>
							{% endfor %}
						</div>
					</div>
                    <div class="swiper-buttons-other">
                        <button class="author-button-prev"><i class="ri-arrow-left-line"></i></button>
                        <button class="author-button-next"><i class="ri-arrow-right-line"></i></button>
                    </div>
				</div>
			</div>
		</div>
	</div>
</section>

<script>
addEventListener('DOMContentLoaded', (event) => {
    var swiper = new Swiper('.swiper-container#about-author', { 
      slidesPerColumn: 1,
      slidesPerView: 1,
      spaceBetween: 30,
      loop: true,
      observer: true,
      observeParents: true,
      navigation: {
        nextEl: '.author-button-next',
        prevEl: '.author-button-prev',
      },
      {%- if settings.enable_rtl -%}
      rtl: true,
      {%- endif -%}
    });
});
</script>

