<style>
.about-author-slider {
    padding-top: {{ section.settings.about_product_padding_top }}px;
    padding-bottom: {{ section.settings.about_product_padding_bottom }}px;
    {% if section.settings.about_product_bgcolor_enable %}
    background-color: {{ section.settings.about_product_bgcolor }};
    {% endif %}
}
@media (max-width: 1199px) {
    .about-author-slider {
        padding-top: {{ section.settings.about_product_padding_top_ip }}px;
        padding-bottom: {{ section.settings.about_product_padding_bottom_ip }}px;
    }
}
@media (max-width: 767px) {
    .about-author-slider {
        padding-top: {{ section.settings.about_product_padding_top_xs }}px;
        padding-bottom: {{ section.settings.about_product_padding_bottom_xs }}px;
    }
}

.about-author-slider .author-main-area {
    position: relative;
    width: 45%;
    margin: 0 auto;
}
.about-author-slider .author-main-area .author-main {
    text-align: center;    
}
.about-author-slider .author-main-area .author-main .author-image span {
    border: 8px solid #ffffff;
    border-radius: 100%;
    overflow: hidden;
}
.about-author-slider .author-main-area .author-main .author-content {
    margin-top: 34px;
}
.about-author-slider .author-main-area .author-main .author-content .author-desc h6 {
    font-size: 24px;
    font-weight: 400;
    line-height: 40px;
}
.about-author-slider .author-main-area .author-main .author-content .author-name {
    margin-top: 36px;
}
.about-author-slider .author-main-area .author-main .author-content .author-name span {
    font-size: 18px;
    line-height: 1;
    font-weight: 300;
}
.about-author-slider .author-main-area .author-main .author-content .author-name span.name {
    position: relative;
    {% if settings.enable_rtl %}
    margin-left: 15px;
    padding-left: 15px;
    {% else %}
    margin-right: 15px;
    padding-right: 15px;
    {% endif %}
}
.about-author-slider .author-main-area .author-main .author-content .author-name span.name::before {
    content: '/';
    position: absolute;
    bottom: 50%;
    transform: translateY(50%);
    {% if settings.enable_rtl %}
    left: -4px;
    {% else %}
    right: -4px;
    {% endif %}
    font-size: 20px;
    font-weight: 400;
}
.swiper-buttons-other button.author-button-prev {
    {% if settings.enable_rtl %}
    right: -150px;
    {% else %}
    left: -150px;
    {% endif %}
} 
.swiper-buttons-other button.author-button-next {
    {% if settings.enable_rtl %}
    left: -150px;
    {% else %}
    right: -150px;
    {% endif %}
}
@media (max-width: 1199px) {
    .about-author-slider .author-main-area {
        width: 60%;
    }
    .about-author-slider .author-main-area .author-main .author-content .author-desc h6 {
        font-size: 22px;
    }
    .swiper-buttons-other button.author-button-prev {
        {% if settings.enable_rtl %}
        right: -100px;
        {% else %}
        left: -100px;
        {% endif %}
    } 
    .swiper-buttons-other button.author-button-next {
        {% if settings.enable_rtl %}
        left: -100px;
        {% else %}
        right: -100px;
        {% endif %}        
    }
}
@media (max-width: 991px) {
    .about-author-slider .author-main-area {
        width: 75%;
    } 
}
@media (max-width: 600px) {
    .about-author-slider .author-main-area {
        width: 100%;
    }
    .about-author-slider .author-main-area .author-main .author-content {
        margin-top: 18px;
    }
    .about-author-slider .author-main-area .author-main .author-content .author-desc h6 {
        font-size: 18px;
        line-height: 30px;
    }
    .about-author-slider .author-main-area .author-main .author-content .author-name {
        margin-top: 19px;
    }
    .about-author-slider .author-main-area .author-main .author-content .author-name span {
        font-size: 16px;
    }
    .swiper-buttons-other button.author-button-prev {
        {% if settings.enable_rtl %}
        right: 0px;
        {% else %}
        left: 0px;
        {% endif %}
    } 
    .swiper-buttons-other button.author-button-next {
        {% if settings.enable_rtl %}
        left: 0px;
        {% else %}
        right: 0px;
        {% endif %}        
    }
}
</style>