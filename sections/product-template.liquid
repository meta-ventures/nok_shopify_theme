<section class="product-details-page">
  <div class="container">
    <div class="row pro_details_pos">
      <div class="{% if section.settings.product_img_pos == 'top' or section.settings.product_img_pos == 'bottom' %}col-xl-5{% else %}col-xl-6{% endif %} col-lg-6 col-md-12 col-12 product_details">
        {%- if section.settings.next_prev_enable -%}
        {%- render 'next-prev-product' -%}
        {%- endif -%}
        <div class="product_detail_img">
          <!-- product big image start -->
          <div class="product_img_top">
            <button class="full-view"><i class="ri-fullscreen-line"></i></button>
            <div class="slider-big"{% if settings.enable_rtl %} dir="rtl"{% endif %}>
              {%- assign featured_media = current_variant.featured_media | default: product.featured_media -%}
              {%- for media in product.media -%}
              <div class="slick-slide" data-image="{{ media.src | image_url }}" data-image-id="{{ media.id }}">
                {% render 'media', media: media, featured_media: featured_media %}
              </div>
              {%- endfor -%}
            </div>
          </div>
          <!-- product big image end -->
          <!-- product small image start -->
          <div class="pro-slider">
            <div class="slider-small pro-detail-slider" id="pro-detail-slider"{% if settings.enable_rtl %} dir="rtl"{% endif %}>
              {% for media in product.media %}
              <div class="slick-slide" data-image="{{ media.src | image_url }}" data-image-id="{{ media.id }}">
                <a href="javascript:void(0)" class="product-single__thumbnail">
                  <img width="{{ media.preview_image.width }}" height="{{ media.preview_image.height }}" src="{{ media.preview_image | image_url: width: 200, height: 220, crop: 'center' }}" class="img-fluid" alt="{{ media.alt | escape }}">
                  {%- if media.media_type == 'video' or media.media_type == 'external_video' -%}
                  <span class="icon-play"><i class="ri-play-line"></i></span>
                  {%- endif -%}
                  {%- if media.media_type == 'model' -%}
                  <span class="icon-modal"><i class="ri-dropbox-line"></i></span>
                  {%- endif -%}
                </a>
              </div>
              {% endfor %}
            </div>
          </div>
          <!-- product small image end -->
        </div>
      </div>

      <div class="{% if section.settings.product_img_pos == 'top' or section.settings.product_img_pos == 'bottom' %}col-xl-7{% else %}col-xl-6{% endif %} col-lg-6 col-md-12 col-12 product_details">
        <div class="product_details_info">
          <div class="pro-nprist">
            {%- for block in section.blocks -%}
            {%- case block.type -%}

            {%- when 'product_title' -%}
            <div class="product-info">
              <div class="product-title">
                <h2>{{ product.title }}</h2>
              </div>
            </div>

            {%- when 'product_price' -%}
            <div class="product-info">
              <div class="pro-prlb{% if on_sale %} pro-sale{% endif %}">
                <div class="price-box">
                  <span class="new-price" id="ProductPrice">{{ product.selected_or_first_available_variant.price | money }}</span>
                  {%- if product.compare_at_price_max > product.price -%}
                  <span class="old-price" id="ComparePrice">{{ product.selected_or_first_available_variant.compare_at_price | money }}</span>
                  {%- endif -%}
                  {% if on_sale %}
                  <span class="percent-count" id="ProductDiscount">{{ product.selected_or_first_available_variant.compare_at_price | minus: product.selected_or_first_available_variant.price | times: 100.0 | divided_by: product.selected_or_first_available_variant.compare_at_price | money_without_currency | replace: ',', '.' | times: 100 | remove: '.0' }}</span>
                  {% endif %}
                </div>
              </div>
            </div>

            {%- when 'product_review' -%}
            <div class="product-info">
              <div class="product-ratting{% if on_sale %} pro-sale{% endif %}">
                <span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
              </div>
            </div>

            {%- when 'product_availability' -%}
            <div class="product-info">
              <div class="product-inventory" id="variant-inventory">
                {% if product.variants.first.inventory_management == "shopify" and product.variants.first.inventory_quantity != "continue" %}
                {% if product.variants.first.inventory_quantity > 0 %}
                <div class="product-variant">
                  <h6>{{ block.settings.availability_title }}</h6>
                  <span class="stock-qty in-stock text-success">
                    <span>{{ block.settings.in_stock_title }}<i class="ri-check-line"></i></span>
                  </span>
                  <span class="stock-qty out-stock text-danger collapse">
                    <span>{{ block.settings.out_of_stock_title }}<i class="ri-close-line"></i></span>
                  </span>
                </div>
                <div class="stock-inventory stock-more text-success">
                  <span>{{ block.settings.stock_label_hurry_text }}</span>
                  <span class="available-stock" id="ProductInventory">{{ product.variants.first.inventory_quantity }}</span>
                  <span>{{ block.settings.stock_left_text }}</span>
                </div>
                <div class="stock-inventory stock-zero text-danger collapse">
                  <span>{{ block.settings.stock_label_unfortunately_text }}</span>
                  <span class="available-stock" id="ProductInventory">{{ product.variants.first.inventory_quantity }}</span>
                  <span>{{ block.settings.stock_left_text }}</span>
                </div>
                {% elsif product.variants.first.inventory_quantity == 0 %}
                <div class="product-variant">
                  <h6>{{ block.settings.availability_title }}</h6>
                  <span class="stock-qty out-stock text-danger">
                    <span>{{ block.settings.out_of_stock_title }}<i class="ri-close-line"></i></span>
                  </span>
                  <span class="stock-qty in-stock text-success collapse">
                    <span>{{ block.settings.in_stock_title }}<i class="ri-check-line"></i></span>
                  </span>
                </div>
                <div class="stock-inventory stock-zero text-danger">
                  <span>{{ block.settings.stock_label_unfortunately_text }}</span>
                  <span class="available-stock" id="ProductInventory">{{ product.variants.first.inventory_quantity }}</span>
                  <span>{{ block.settings.stock_left_text }}</span>
                </div>
                <div class="stock-inventory stock-more text-success collapse">
                  <span>{{ block.settings.stock_label_hurry_text }}</span>
                  <span class="available-stock" id="ProductInventory">{{ product.variants.first.inventory_quantity }}</span>
                  <span>{{ block.settings.stock_left_text }}</span>
                </div>
                {% endif %}
                {% else %}
                <div class="product-variant">
                  <h6>{{ block.settings.availability_title }}</h6>
                  <span class="stock-qty in-out-stock text-success">
                    <span>{{ block.settings.in_stock_title }}<i class="ri-check-line"></i></span>
                  </span>
                </div>
                {% endif %}
              </div>
            </div>

            {%- when 'product_timer' -%}
            {%- if product.metafields.my_fields.timer -%}
            <div class="product-info">
              <div class="timer-section counter-event-{{ product.id }}" id="counter-event" data-enddate="{{ product.metafields.my_fields.timer }}">
                {{ product.metafields.my_fields.timer }}
              </div>
            </div>
            {%- endif -%}

            {%- when 'product_short_desc' -%}
            {%- if product.metafields.my_fields.short_description -%}
            <div class="product-info">
              <div class="product-description">
                <p>{{ product.metafields.my_fields.short_description | truncate: 200 }}</p>
              </div>
            </div>
            {%- endif -%}

            {%- when 'product_variant_picker' -%}
            <div class="product-info">
              <div class="pro-detail-action">
                <form action="/cart/add" method="post" class="cart-{{ product.id }}" enctype="multipart/form-data" id="add-item-form">
                  {% render 'product-swatch-variant' %}
                </form>
              </div>
            </div>

            {%- when 'product_quantity_selector' -%}
            <div class="product-info">
              <form action="/cart/add" method="post" class="cart-{{ product.id }}" enctype="multipart/form-data" id="add-item-form">
                <div class="product-quantity-action">
                  <h6>{{ block.settings.qty_title }}</h6>
                  {% render 'product-quantity' %}
                </div>
              </form>
            </div>

            {%- when 'product_buy_buttons' -%}
            <div class="product-info">
              <div class="product-actions">
                <div class="pro-detail-button">
                  {% render 'product-cart-action' %}
                  {% render 'wishlist-5' %}
                  {%- render 'direct-buy' -%}
                </div>

                {%- if settings.wishlist_enable or product.metafields.my_fields.affiliate_link -%}
                <div class="pro-aff-che">

                </div>
                {%- endif -%}
              </div>
            </div>

            {%- when 'product_sku' -%}
            {%- if current_variant.sku.size > 0 -%}
            <div class="product-info">
              <div class="product-sku">
                <h6>{{ block.settings.product_sku_title }}</h6>
                <span class="variant-sku" id="VariantSku">{{ current_variant.sku }}</span>
              </div>
            </div>
            {%- endif -%}

            {%- when 'product_social' -%}
