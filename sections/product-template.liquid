</section>
<script>
  window.onload = function() {
    $('.slider-big').slick({
      slidesToShow: 1,
      slidesToScroll: 1,
      arrows: false,
      centerMode: true,
      centerPadding: '0px',
      asNavFor: '.slider-small',
      {% if settings.enable_rtl %}
      rtl: true,
      {% endif %}
      {% if section.settings.product_img_pos == 'top' or section.settings.product_img_pos == 'bottom' %}
      adaptiveHeight: true,
      {% endif %}
      {% if section.settings.product_img_pos == 'left' or section.settings.product_img_pos == 'right' %}
      vertical: true,
      verticalSwiping: true,
      responsive: [
        {
          breakpoint: 480,
          settings: {
            vertical: false,
            verticalSwiping: false
          }
        }
      ]
      {% endif %}
    });
    $('.slider-small').slick({
      {% if section.settings.product_img_pos == 'top' or section.settings.product_img_pos == 'bottom' %}
      slidesToShow: 3,
      {% elsif section.settings.product_img_pos == 'left' or section.settings.product_img_pos == 'right' %}
      slidesToShow: 3,
      {% endif %}
      slidesToScroll: 1,
      {%- if section.settings.slider_arrow_enable -%}
      arrows: true,
      {%- else -%}
      arrows: false,
      {%- endif -%}
      prevArrow: '<button class="slick-prev"><i class="ri-arrow-left-line"></i></button>',
      nextArrow: '<button class="slick-next"><i class="ri-arrow-right-line"></i></button>',
      dots: false,
      {% if section.settings.product_img_pos == 'left' or section.settings.product_img_pos == 'right' %}
      vertical: true,
      verticalSwiping: true,
      {% endif %}
      centerMode: true,
      centerPadding: '0px',
      focusOnSelect: true,
      asNavFor: '.slider-big',
      {% if settings.enable_rtl %}
      rtl: true,
      {% endif %}
      responsive: [
        {
          breakpoint: 480,
          settings: {
            {% if section.settings.product_img_pos == 'left' or section.settings.product_img_pos == 'right' %}
            vertical: false,
            verticalSwiping: false,
            {% endif %}
            slidesToShow: 3
          }
        }
      ]
    });
    $(window).resize(function() {
      $('.slider-big')[0].slick.refresh();
      $('.slider-small')[0].slick.refresh();
    });

    new Shopify.OptionSelectors('productSelect', {
      product: {{ product | json }},
      onVariantSelected: selectCallback,
      enableHistoryState: true
    });
    {% if product.options.size == 1 and product.options.first != 'Title' %}
      $('.selector-wrapper:eq(0)').prepend('<label for="productSelect-option-0">{{ product.options.first | escape }}</label>');
    {% endif %}
    {% if product.variants.size == 1 and product.variants.first.title contains 'Default' %}
      $('.selector-wrapper').hide();
      $('.swatch').hide();
    {% endif %}
    {% assign found_one_in_stock = false %}
    {% for variant in product.variants %}
    {% if variant.available and found_one_in_stock == false %}
    {% assign found_one_in_stock = true %}
    {% for option in product.options %}
      $('.single-option-selector:eq({{ forloop.index0 }})').val({{ variant.options[forloop.index0] | json }}).trigger('change');
    {% endfor %}
    {% endif %}
    {% endfor %}
    $('.product-single .single-option-selector').wrap('<div class="selector-arrow">');
  };
  var selectCallback = function(variant, selector) {
      timber.productPage({
        money_format: "{{ shop.money_format }}",
        variant: variant,
        selector: selector
      });
      if (variant) {
        var form = jQuery('#' + selector.domIdPrefix).closest('form');
        for (var i=0,size=variant.options.size; i<size; i++) {
          var val = variant.options[i].replace(/'/g,"&#039;");
          var radioButton = form.find(".swatch[data-option-index='" + i + "'] :radio[value='" + val +"']");
          if (radioButton.size()) {
            radioButton.get(0).checked = true;
          }
        }
      }
    }
  {% if section.settings.zoom_enable %}
  // product zoom
  function zoom(e){
    var zoomer = e.currentTarget;
    e.offsetX ? offsetX = e.offsetX : offsetX = e.touches[0].pageX
    e.offsetY ? offsetY = e.offsetY : offsetX = e.touches[0].pageX
    x = offsetX/zoomer.offsetWidth*100
    y = offsetY/zoomer.offsetHeight*100
    zoomer.style.backgroundPosition = x + '% ' + y + '%';
  }
  {% endif %}
</script>
