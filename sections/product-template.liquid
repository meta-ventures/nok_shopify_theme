              <div class="share-icons">
                <h6>{{ block.settings.social_share_title }}</h6>
                {% render 'social-share' %}
              </div>
            </div>

            {%- when 'product_payment' -%}
            <div class="product-info">
              <div class="product-payment-image">
                {% render 'payment-icon' %}
              </div>
            </div>

            {%- endcase -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
