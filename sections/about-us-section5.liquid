<section class="about-info-area">
	<div class="container">
		<div class="row">
			<div class="col">
				<div class="info-area-main">
					{% if section.settings.about_info_title != '' %}
					<div class="info-title info-block">
						{% if section.settings.about_info_subtitle != '' %}
						<span class="subtitle">{{ section.settings.about_info_subtitle }}</span>
						{% endif %}
						<h1 class="title">{{ section.settings.about_info_title }}</h1>
					</div>
					{% endif %}
					{% if section.settings.about_info_desc_1 != '' %}
					<div class="text-block info-block">
						{{ section.settings.about_info_desc_1 }}
					</div>
					{% endif %}
					{% if section.settings.about_info_desc_2 != '' %}
					<div class="text-block info-block">
						{{ section.settings.about_info_desc_2 }}
					</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
</section>
{% schema %}
{
  "name": "About us Section 5",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "paragraph",
      "content": "Desktop / Laptop / tablet"
    },
    {
      "type": "range",
      "id": "about_product_padding_top",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 100
    },
    {
      "type": "range",
      "id": "about_product_padding_bottom",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 100
    },
    {
      "type": "paragraph",
      "content": "Ipad pro / Ipad"
    },
    {
      "type": "range",
      "id": "about_product_padding_top_ip",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "about_product_padding_bottom_ip",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 80
    },
    {
      "type": "paragraph",
      "content": "Mobile"
    },
    {
      "type": "range",
      "id": "about_product_padding_top_xs",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "about_product_padding_bottom_xs",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 60
    },
    {
      "type": "header",
      "content": "Section Background Color"
    },
    {
      "type": "checkbox",
      "id": "section_background_color_enable",
      "label": "Show Background Color",
      "default": true
    },
    {
      "type": "color",
      "id": "section_background_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Information Text"
    },
    {
      "type": "header",
      "content": "Information Title"
    },
    {
      "type": "text",
      "id": "about_info_subtitle",
      "label": "Information Subtitle",
      "default": "Strong mission"
    },
    {
      "type": "text",
      "id": "about_info_title",
      "label": "Information Title",
      "default": "Innovative desing"
    },
    {
      "type": "header",
      "content": "Information Text 1"
    },
    {
      "type": "richtext",
      "id": "about_info_desc_1",
      "label": "Text 1"
    },
    {
      "type": "header",
      "content": "Information Text 2"
    },
    {
      "type": "richtext",
      "id": "about_info_desc_2",
      "label": "Text 2"
    }
  ],
  "presets": [
    {
      "name": "About us Section 5",
      "category": "About us Section 5"
    }
  ]
}
{% endschema %}
<style>
.about-info-area {
    position: relative;
    padding-top: {{ section.settings.about_product_padding_top }}px;
    padding-bottom: {{ section.settings.about_product_padding_bottom }}px;
    {% if section.settings.section_background_color_enable %}
    background-color: {{ section.settings.section_background_color }};
    {% endif %}
}
@media (max-width: 1199px) {
    .about-info-area {
        padding-top: {{ section.settings.about_product_padding_top_ip }}px;
        padding-bottom: {{ section.settings.about_product_padding_bottom_ip }}px;
    }
}
@media (max-width: 767px) {
    .about-info-area {
        padding-top: {{ section.settings.about_product_padding_top_xs }}px;
        padding-bottom: {{ section.settings.about_product_padding_bottom_xs }}px;
    }
}

.about-info-area .info-area-main {
	display: flex;
	flex-wrap: wrap;
	align-items: center;
	{% if settings.enable_rtl %}
    margin-right: -30px;
    {% else %}
    margin-left: -30px;
    {% endif %}
	margin-top: -30px;
}
.about-info-area .info-area-main .info-block {
	width: calc(33.33% - 30px);
	margin-top: 30px;
	{% if settings.enable_rtl %}
    margin-right: 30px;
    {% else %}
    margin-left: 30px;
    {% endif %}
}
.about-info-area .info-area-main .info-title span.subtitle {
	font-size: 18px;
	margin-bottom: 20px;
	line-height: 1;
}
.about-info-area .info-area-main .info-title h1.title {
    font-size: 48px;
    width: 80%;
    line-height: 1;
}
.about-info-area .info-area-main .text-block p {
	width: 90%;
    font-size: 18px;
    line-height: 30px;
} 
@media (max-width: 1280px) {
	.about-info-area .info-area-main .text-block p {
		width: 100%;
	}
}
@media (max-width: 1199px) {
	.about-info-area .info-area-main .info-title h1.title {
		font-size: 39px;
	}
}
@media (max-width: 991px) {
	.about-info-area .info-area-main .info-block.info-title {
		width: calc(100% - 30px);
	}
	.about-info-area .info-area-main .info-block.text-block {
		width: calc(50% - 30px);
	}
}
@media (max-width: 767px) {
	.about-info-area .info-area-main {
		margin-top: -16px;
		{% if settings.enable_rtl %}
	    margin-right: 0px;
	    {% else %}
	    margin-left: 0px;
	    {% endif %}
	}
	.about-info-area .info-area-main .info-block {
		{% if settings.enable_rtl %}
	    margin-right: 0px;
	    {% else %}
	    margin-left: 0px;
	    {% endif %}
	}
	.about-info-area .info-area-main .info-block.text-block {
		width: calc(100% - 0px);
	}
	.about-info-area .info-area-main .info-block {
		margin-top: 16px;
	}
	.about-info-area .info-area-main .info-title span.subtitle {
		font-size: 16px;
		margin-bottom: 10px;
	}
	.about-info-area .info-area-main .info-title h1.title {
		font-size: 27px;
	}
	.about-info-area .info-area-main .text-block p {
		font-size: 16px;
	}
}
</style>