<style>
.contact-store-area {
    overflow-x: hidden;
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
    {% if section.settings.section_bg_color_enable %}
    background-color: {{ section.settings.section_bg_color }};
    {% endif %}
  }
  @media (max-width: 1199px){
    .contact-store-area {
      padding-top: {{ section.settings.section_padding_top_ip }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_ip }}px;
    }
  }
  @media (max-width: 767px){
    .contact-store-area {
      padding-top: {{ section.settings.section_padding_top_xs }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
    }
  }

  .contact-store-area .store-area .store-item {
  	position: relative;
  	padding: 70px 30px;
  	text-align: center;
  	border: 1px solid #e2e2e2;
  }	
  .contact-store-area .store-area .store-item::before {
  	background-color: #232323;
  	content: '';
  	position: absolute;
  	top: 0px;
  	right: 0px;
  	bottom: 0px;
  	left: 0px;
  	opacity: 0;
  	visibility: hidden;
  }
  .contact-store-area .store-area .store-item:hover::before {
  	opacity: 0.8;
  	visibility: visible;
  }
  .contact-store-area .store-area .store-item .store-info .store-info-area {
  	margin-top: 44px;
  }
  .contact-store-area .store-area .store-item .store-info .store-info-area .info-block {
  	margin-top: 28px;
  }
  .contact-store-area .store-area .store-item .store-info .store-info-area .info-block:first-child {
  	margin-top: 0px;
  }
  .contact-store-area .store-area .store-item .store-info .store-info-area .info-block p,
  .contact-store-area .store-area .store-item .store-info .store-info-area .info-block p a {
  	font-size: 18px;
  	font-weight: 400;
  }
  .contact-store-area .store-area .store-item .store-btn {
  	position: absolute;
  	bottom: 50%;
  	transform: translateY(50%);
  	left: 0px;
  	right: 0px;
  	opacity: 0;
  	visibility: hidden;
  }
  .contact-store-area .store-area .store-item:hover .store-btn {
  	opacity: 1;
  	visibility: visible;
  }
  .contact-store-area .store-area .store-item::before,
  .contact-store-area .store-area .store-item:hover::before,
  .contact-store-area .store-area .store-item .store-btn,
  .contact-store-area .store-area .store-item:hover .store-btn {
  	-webkit-transition: all 0.3s ease-in-out 0s;
    -o-transition: all 0.3s ease-in-out 0s;
    transition: all 0.3s ease-in-out 0s;
  }
  @media (max-width: 767px) {
  	.contact-store-area .store-area .store-item {
  		padding: 50px 30px;
  	}
  	.contact-store-area .store-area .store-item .store-info .store-info-area {
  		margin-top: 32px;
  	}
  	.contact-store-area .store-area .store-item .store-info .store-info-area .info-block {
  		margin-top: 16px;
  	}
  	.contact-store-area .store-area .store-item .store-info .store-info-area .info-block p,
  	.contact-store-area .store-area .store-item .store-info .store-info-area .info-block p a {
  		font-size: 17px;
  	}
  }
</style>