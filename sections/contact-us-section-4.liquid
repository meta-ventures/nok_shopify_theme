<section class="contact-store-area">
	<div class="container">
		<div class="row">
			<div class="col">
				{% if section.settings.new_title != '' %}
				<div class="other-page-new-title">
					<div class="new-title">
						<p>{{ section.settings.new_subtitle }}</p>
						<h1>{{ section.settings.new_title }}</h1>
					</div>
				</div>
				{% endif %}
				<div class="store-area">
					<div class="swiper-container" id="store-info-slider">
						<div class="swiper-wrapper">
							{% for block in section.blocks %}
							<div class="swiper-slide">
								<div class="store-item">
									<div class="store-info">
										<div class="store-img">
											<span>
												<img width="{{ block.settings.store_image.width }}" height="{{ block.settings.store_image.height }}" src="{% if block.settings.store_image %}{{ block.settings.store_image | image_url: width: 70, height: 40, crop: 'center' }}{% else %}https://dummyimage.com/70x40{% endif %}" class="img-fluid" alt="">
											</span>
										</div>
										<div class="store-info-area">
											<div class="info-block">
												{{ block.settings.info_text_1 }}
											</div>
											<div class="info-block">
												{{ block.settings.info_text_2 }}
											</div>
										</div>
									</div>
									{% if block.settings.store_btn_text != '' %}
									<div class="store-btn">
										<a class="btn-style3" href="{{ block.settings.store_btn_url }}">{{ block.settings.store_btn_text }}</a>
									</div>
									{% endif %}
								</div>
							</div>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<script type="text/javascript">
addEventListener('DOMContentLoaded', (event) => {
  var swiper = new Swiper('#store-info-slider', {
  	slidesPerColumn: 1,
  	slidesPerView: 3,
  	spaceBetween: 30,
  	observer: true,
  	loop: false,
  	observeParents: true,
  	{%- if settings.enable_rtl -%}
  	rtl: true,
  	{%- endif -%}
  	breakpoints: {
  	  0: {
  	    slidesPerView: 1,
  	    spaceBetween: 12
  	  },
  	  479: {
  	    slidesPerView: 1,
  	    spaceBetween: 12
  	  },
  	  600: {
  	    slidesPerView: 1,
  	    spaceBetween: 12
  	  },
  	  768: {
  	    slidesPerView: 2,
  	    spaceBetween: 12
  	  },
  	  979: {
  	    slidesPerView: 2,
  	    spaceBetween: 12
  	  },
  	  1199: {
  	    slidesPerView: 2,
  	    spaceBetween: 12
  	  }
  	}
  });
});
</script>

