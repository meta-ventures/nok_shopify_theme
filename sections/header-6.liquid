<!-- header-area start -->
<section class="header-kaj header-6">
  <div class="header-area header-sticky-area">
    <div class="container-fluid">
      <div class="row">
        <div class="col">
          <div class="header-main-area">
            <div class="header-main">
              <div class="header-element logo">
                {%- render 'company-logo' -%}
              </div>
              <div class="header-element menu-wrap">
                <div class="megamenu-content">
                  <a href="#main-collapse" class="browse-cat" data-bs-toggle="collapse" aria-expanded="true">
                    <span class="menu-icon"><i class="ri-menu-line"></i></span>
                    <span class="menu-title">{{ section.settings.header_main_menu_title }}</span>
                    <span class="menu-arrow"><i class="ri-arrow-down-s-line"></i></span>
                  </a>
                  <div class="mainwrap collapse show" id="main-collapse">
                    <ul class="main-menu">
                      {% assign header_main_menu = section.settings.header_main_menu %}
                      {% for link in linklists[header_main_menu].links %}
                      {% if linklists[header_main_menu].links != '' %}
                      {% render 'main-menu' %}
                      {% endif %}
                      {% endfor %}
                    </ul>
                  </div>
                </div>
              </div>
              <div class="header-element right-block-box">
                <ul class="shop-element">
                  <li class="side-wrap toggle-wrap">
                    <a class="navbar-toggler header-url">
                      <span class="icon"><i class="ri-menu-line"></i></span>
                      <span class="title">{{ section.settings.head_menu_title }}</span>
                    </a>
                  </li>
                  {%- if section.settings.search_enable -%}
                  <li class="side-wrap search-wrap">
                    <a class="search-popup header-url" data-bs-toggle="modal" href="#seachmodal">
                      <span class="icon"><i class="feather-search"></i></span>
                      {% if section.settings.search_title != '' %}
                      <span class="title">{{ section.settings.search_title }}</span>
                      {% endif %}
                    </a>
                  </li>
                  {%- endif -%}
                  {% if section.settings.header_user_enable %}
                  <li class="side-wrap user-wrap">
                    {% if customer %}
                    <a class="acc-link-wrap header-url" href="{{ routes.account_url }}">
                      <span class="icon"><i class="feather-user"></i></span>
                      {% if section.settings.header_user_title != '' %}
                      <span class="title">{{ section.settings.header_user_title }}</span>
                      {% endif %}
                    </a>
                    {% else %}
                    <a class="acc-link-wrap header-url" href="{{ routes.account_login_url }}">
                      <span class="icon"><i class="feather-user"></i></span>
                      {% if section.settings.header_user_title != '' %}
                      <span class="title">{{ section.settings.header_user_title }}</span>
                      {% endif %}
                    </a>
                    {% endif %}
                  </li>
                  {% endif %}
                  {%- if section.settings.wishlist_enable -%}
                  <li class="side-wrap wishlist-wrap">
                    <a class="header-wishlist-btn header-url" href="/pages/wishlist" title="Wishlist">
                      <span class="icon"><i class="feather-heart"></i></span>
                      {% if section.settings.wishlist_title != '' %}
                      <span class="title">{{ section.settings.wishlist_title }}</span>
                      {% endif %}
                      <span class="wishlist-counter count">{% if wishlist.count %}({{ wishlist.count }}{% else %}0{% endif %}</span>
                    </a>
                  </li>
                  {%- endif -%}
                  {% if section.settings.cart_enable %}
                  <li class="side-wrap cart-wrap">
                    <div class="shopping-widget">
                      <div class="shopping-cart">
                        <a href="javascript:void(0)" class="cart-count header-url">
                          <span class="icon"><i class="feather-shopping-bag"></i></span>
                          {% if section.settings.cart_title != '' %}
                          <span class="title">{{ section.settings.cart_title }}</span>
                          {% endif %}
                          <span id="cart-total" class="bigcounter count">- {{ cart.item_count }}</span>
                          <span id="cart-total" class="subtotal-price">{{ cart.total_price | money }}</span>
                        </a>
                      </div>
                    </div>
                  </li>
                  {% endif %}
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {% render 'mini-cart2-side' %}
  {%- render 'search-popup' -%}
  <div class="header-bottom-area">
    <div class="container header-bottom-container">
      <div class="row header-bottom-container">
        <div class="col header-bottom-container">
          <div class="main-menu-area">
            <nav class="main-navigation navbar-expand-xl">
              <div class="box-header">
                <button class="close-box" type="button"><i class="ri-close-line"></i></button>
              </div>
              <div class="navbar-collapse" id="navbarContent">
                <div class="megamenu-content">
                  <a href="#main-collapse" class="browse-cat" data-bs-toggle="collapse" aria-expanded="true">
                    <span class="menu-icon"><i class="ri-menu-line"></i></span>
                    <span class="menu-title">{{ section.settings.header_main_menu_title }}</span>
                    <span class="menu-arrow"><i class="ri-arrow-down-s-line"></i></span>
                  </a>
                  <div class="mainwrap collapse show" id="main-collapse">
                    <ul class="main-menu">
                      {% assign header_main_menu = section.settings.header_main_menu %}
                      {% for link in linklists[header_main_menu].links %}
                      {% if linklists[header_main_menu].links != '' %}
                      {% render 'main-menu' %}
                      {% endif %}
                      {% endfor %}
                    </ul>
                  </div>
                </div>
              </div>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- header-area end -->
