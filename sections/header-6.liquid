<style>
  .header-kaj.header-6 .header-area{
    {% if section.settings.header_bg_color_enable %}
    background-color: {{ section.settings.header_bg_color }};
    {% endif %}
    {% if template == 'index' and section.settings.header_trans_enable %}
    position: absolute;
    z-index: 2;
    left: 0;
    right: 0;
    width: 100%;
    {% endif %}
  }
  {% if section.settings.header_sticky_enable %}
  {% if template == 'index' or template == 'collection' or template == 'product' or template == 'product.template2' or template == 'product.template3' or template == 'product.template4' or template == 'product.template5' or template == 'product.template6' or template == 'product.template7' or template == 'product.template8' %}
  /* sticky menu css */
  .header-kaj.header-6 .is-sticky{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 3;
    background-color: var(--background-color-body);
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.15);
  }
  .header-kaj.header-6 .header-area.is-sticky {
    animation: smoothScroll 1s forwards;
    border-bottom: none;
  }
  @keyframes smoothScroll {
    0% {
      transform: translateY(-200px);
    }
    100% {
      transform: translateY(0px);
    }
  }
  {% endif %}
  {% endif %}

a.navbar-toggler,
.header-kaj.header-6 .header-area .header-main-area .header-main .menu-wrap .megamenu-content .mainwrap ul.main-menu li.menu-link a.link-title,
.header-kaj.header-6 .header-area .header-main-area .header-main .right-block-box ul.shop-element li.side-wrap a.header-url {
  {%- if template == 'index' -%}
  color: {{ section.settings.header_text_color }};
  {%- else -%}
  color: {{ section.settings.other_header_text_color }};
  {%- endif -%}
}
.header-kaj.header-6 .header-area .header-main-area .header-main .menu-wrap .megamenu-content .mainwrap ul.main-menu li.menu-link:hover a.link-title span,
.header-kaj.header-6 .header-area .header-main-area .header-main .menu-wrap .megamenu-content .mainwrap ul.main-menu li.menu-link:hover a.link-title i,
.header-kaj.header-6 .header-area .header-main-area .header-main .right-block-box ul.shop-element li.side-wrap a.header-url:hover {
  background-image: var(--gradient-color);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
.is-sticky a.navbar-toggler,
.header-kaj.header-6 .is-sticky .header-main-area .header-main .menu-wrap .megamenu-content .mainwrap ul.main-menu li.menu-link a.link-title,
.header-kaj.header-6 .is-sticky .header-area .header-main-area .header-main .right-block-box ul.shop-element li.side-wrap a.header-url {
  color: {{ section.settings.other_header_text_color }};
}
.header-kaj.header-6 .is-sticky .header-area .header-main-area .header-main .menu-wrap .megamenu-content .mainwrap ul.main-menu li.menu-link:hover a.link-title span,
.header-kaj.header-6 .is-sticky .header-area .header-main-area .header-main .menu-wrap .megamenu-content .mainwrap ul.main-menu li.menu-link:hover a.link-title i,
.header-kaj.header-6 .is-sticky .header-area .header-main-area .header-main .right-block-box ul.shop-element li.side-wrap a.header-url:hover {
  background-image: var(--gradient-color);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
/*=====================================
header-6 css
======================================*/
.header-kaj.header-6 {
  position: relative;
}
.header-kaj.header-6 .header-area .header-main-area .header-main {
  display: flex;
  align-items: center;
}
.header-kaj.header-6 .header-area .header-main-area .header-main .header-element.logo {
  width: 25%;
}
.header-kaj.header-6 .header-area .header-main-area .header-main .header-element.menu-wrap{
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header-kaj.header-6 .header-area .header-main-area .header-main .header-element.right-block-box {
  width: 25%;
}
@media (max-width: 1199px) {
  .header-kaj.header-6 .header-area {
    padding: 15px 0;
  }
  .header-kaj.header-6 .header-area .header-main-area .header-main .header-element.logo,
  .header-kaj.header-6 .header-area .header-main-area .header-main .header-element.right-block-box{
    width: 50%;
  }
  .header-kaj.header-6 .header-area .header-main-area .header-main .header-element.logo{
    text-align: left;
  }
  .header-kaj.header-6 .header-area .header-main-area .header-main .header-element.menu-wrap{
    display: none;
  }
}
@media (max-width: 479px) {
  .header-kaj.header-6 .header-area .header-main-area .header-main {
    flex-wrap: wrap;
  }
  .header-kaj.header-6 .header-area .header-main-area .header-main .header-element.logo {
    width: 40%;
  }
  .header-kaj.header-6 .header-area .header-main-area .header-main .header-element.right-block-box{
    width: 60%;
  }
}

/* right-block css */
.header-kaj.header-6 .header-area .header-main-area .header-main .right-block-box {
  display: flex;
  justify-content: flex-end;
}
.header-kaj.header-6 .header-area .header-main-area .header-main .right-block-box ul.shop-element{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  width: 100%;
}
.header-kaj.header-6 .header-area .header-main-area .header-main .right-block-box ul.shop-element li.side-wrap{
  position: relative;
  {% if settings.enable_rtl %}
  margin-right: 20px;
  {% else %}
  margin-left: 20px;
  {% endif %}
  line-height: 1;
}
.header-kaj.header-6 .header-area .header-main-area .header-main .right-block-box ul.shop-element li.side-wrap.toggle-wrap {
  display: none;
}
.header-kaj.header-6 .header-area .header-main-area .header-main .right-block-box ul.shop-element li.side-wrap:first-child{
  {% if settings.enable_rtl %}
  margin-right: 0px;
  {% else %}
  margin-left: 0px;
  {% endif %}
}
.header-kaj.header-6 .header-area .header-main-area .header-main .right-block-box ul.shop-element li.side-wrap a.header-url {
  font-size: 20px;
}
.header-kaj.header-6 .header-area .header-main-area .header-main .right-block-box ul.shop-element li.side-wrap a.header-url span.title,
.header-kaj.header-6 .header-area .header-main-area .header-main .right-block-box ul.shop-element li.side-wrap a.header-url span.count,
.header-kaj.header-6 .header-area .header-main-area .header-main .right-block-box ul.shop-element li.side-wrap a.header-url span.subtotal-price {
  display: none;
}
@media (max-width: 1199px) {
  .header-kaj.header-6 .header-area .header-main-area .header-main .right-block-box ul.shop-element li.side-wrap.toggle-wrap {
    display: flex;
  }
  .header-kaj.header-6 .header-area .header-main-area .header-main .right-block-box ul.shop-element li.search-wrap-desk{
    display: none;
  }
  .header-kaj.header-6 .header-area .header-main-area .header-main .right-block-box ul.shop-element li.search-wrap{
    display: block;
  }
}
@media (max-width: 600px) {
  .header-kaj.header-6 .header-area .header-main-area .header-main .right-block-box ul.shop-element li.side-wrap {
    {% if settings.enable_rtl %}
    margin-right: 15px;
    {% else %}
    margin-left: 15px;
    {% endif %}
  }
  .header-kaj.header-6 .header-area .header-main-area .header-main .right-block-box ul.shop-element li.side-wrap a.header-url {
    font-size: 18px;
  }
}
</style>
