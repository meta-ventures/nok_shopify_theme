<section class="about-team-2">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="our-team-2">
                    <div class="content-main-title">
                        <div class="section-cont-title">
                            {% if section.settings.our_team_title != '' %}
                            <h2>
                                <span>{{ section.settings.our_team_title }}</span>
                            </h2>
                            {% endif %}
                        </div>

                        {% if section.settings.our_team_desc != '' %}
                        <p>{{ section.settings.our_team_desc }}</p>
                        {% endif %}
                    </div>
                    <ul class="team-wrap">
                        {% for block in section.blocks %}
                        <li class="team-content banner-hover">
                            <a href="javascript:void(0)" class="banner-img">
                                <img width="{{ block.settings.member_img.width }}" height="{{ block.settings.member_img.height }}" class="img-fluid" src="{% if block.settings.member_img %}{{ block.settings.member_img | image_url }}{% else %}https://dummyimage.com/450x580{% endif %}" alt="">
                            </a>
                            <div class="team-info">
                                <h6>{{ block.settings.member_name }}</h6>
                                <span>{{ block.settings.member_position }}</span>
                                <p>{{ block.settings.member_desc }}</p>
                            </div>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
{% schema %}
{
  "name": "Our Team 2",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "paragraph",
      "content": "Desktop / Laptop / tablet"
    },
    {
      "type": "range",
      "id": "abt_team_2_padding_top",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 100
    },
    {
      "type": "range",
      "id": "abt_team_2_padding_bottom",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 100
    },
    {
      "type": "paragraph",
      "content": "Ipad pro / Ipad"
    },
    {
      "type": "range",
      "id": "abt_team_2_padding_top_ip",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "abt_team_2_padding_bottom_ip",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 80
    },
    {
      "type": "paragraph",
      "content": "Mobile"
    },
    {
      "type": "range",
      "id": "abt_team_2_padding_top_xs",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "abt_team_2_padding_bottom_xs",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 60
    },
    {
      "type": "header",
      "content": "Section Background Color"
    },
    {
      "type": "color",
      "id": "abt_team_2_bgcolor",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "checkbox",
      "id": "abt_team_2_bgcolor_enable",
      "label": "Show Background Color",
      "default": true
    },
    {
      "type": "paragraph",
      "content": "Section Content"
    },
    {
      "type": "text",
      "id": "our_team_title",
      "label": "Title",
      "default": "Our team"
    },
    {
      "type": "textarea",
      "id": "our_team_desc",
      "label": "Description",
      "default": "Lorem Ipsum is printing & typesetting industry's standard dummy text since texts"
    }
  ],
  "blocks": [
    {
      "type": "our-vision",
      "name": "Our Vision",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "member_img",
          "label": "Image",
          "info": "Recommended Size: 450px x 580px"
        },
        {
          "type": "text",
          "id": "member_name",
          "label": "Team Member Name",
          "default": "Nina theresa"
        },
        {
          "type": "text",
          "id": "member_position",
          "label": "Team Member Position",
          "default": "Managing director"
        },
        {
          "type": "textarea",
          "id": "member_desc",
          "label": "About Team Member Information",
          "default": "Vestibulum porttitor egestas orci, vitae ullamcorper risus rutrum massa quis."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Our Team 2",
      "category": "2. About Us"
    }
  ]
}
{% endschema %}
<style>
    .about-team-2{
        padding-top: {{ section.settings.abt_team_2_padding_top }}px;
        padding-bottom: {{ section.settings.abt_team_2_padding_bottom }}px;
        {% if section.settings.abt_team_2_bgcolor_enable %}
        background-color: {{ section.settings.abt_team_2_bgcolor }};
        {% endif %}
    }
    @media (max-width: 1199px) {
        .about-team-2{
            padding-top: {{ section.settings.abt_team_2_padding_top_ip }}px;
            padding-bottom: {{ section.settings.abt_team_2_padding_bottom_ip }}px;
        }
    }
    @media (max-width: 767px) {
        .about-team-2{
            padding-top: {{ section.settings.abt_team_2_padding_top_xs }}px;
            padding-bottom: {{ section.settings.abt_team_2_padding_bottom_xs }}px;
        }
    }

    /* teamcontent */
    .our-team-2 ul.team-wrap{
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        {%- if settings.enable_rtl -%}
        margin: -30px -30px 0 0px;
        {%- else -%}
        margin: -30px 0 0 -30px;
        {%- endif -%}
    }
    .our-team-2 ul.team-wrap li.team-content{
        display: flex;
        align-items: center;
        width: calc(50% - 30px);
        {%- if settings.enable_rtl -%}
        margin: 30px 30px 0 0px;
        {%- else -%}
        margin: 30px 0 0 30px;
        {%- endif -%}
    }
    .our-team-2 ul.team-wrap li.team-content a{
        width: 50%;
    }
    .our-team-2 ul.team-wrap li.team-content .team-info{
        width: 50%;
        {%- if settings.enable_rtl -%}
        padding-right: 30px;
        {%- else -%}
        padding-left: 30px;
        {%- endif -%}
    }
    .our-team-2 ul.team-wrap li.team-content .team-info h6{
        font-size: 18px;
        text-transform: capitalize;
        font-weight: 500;
        line-height: 1;
    }
    .our-team-2 ul.team-wrap li.team-content .team-info span{
        display: block;
        color: var(--font-color-primary);
        font-size: 16px;
        margin-top: 13px;
        line-height: 1;
    }
    .our-team-2 ul.team-wrap li.team-content .team-info p{
        margin-top: 27px;
        padding-top: 23px;
        border-top: 1px solid #e2e2e2;
    }
    @media (max-width: 991px) {
        .our-team-2 ul.team-wrap li.team-content{
            width: calc(100% - 30px);
        }
    }
    @media (max-width: 767px) {
        .our-team-2 ul.team-wrap li.team-content .team-info{
            {%- if settings.enable_rtl -%}
            padding-right: 15px;
            {%- else -%}
            padding-left: 15px;
            {%- endif -%}
        }
        .our-team-2 ul.team-wrap li.team-content .team-info p{
            margin-top: 15px;
            padding-top: 11px;
        }
    }
    @media (max-width: 479px) {
        .our-team-2 ul.team-wrap{
            {%- if settings.enable_rtl -%}
            margin: -22px -15px 0 0px;
            {%- else -%}
            margin: -22px 0 0 -15px;
            {%- endif -%}
        }
        .our-team-2 ul.team-wrap li.team-content{
            width: calc(100% - 15px);
            flex-direction: column;
            {%- if settings.enable_rtl -%}
            margin: 22px 15px 0 0px;
            {%- else -%}
            margin: 22px 0 0 15px;
            {%- endif -%}
        }
        .our-team-2 ul.team-wrap li.team-content a{
            width: 100%;
        }
        .our-team-2 ul.team-wrap li.team-content .team-info{
            width: 100%;
            padding: 15px 0 0;
        }
    }
</style>