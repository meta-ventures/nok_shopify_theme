{{ 'section-step-by-step.css' | asset_url | stylesheet_tag }}
<div id="Steps-{{ section.id }}">
  <div class="container">
    <div class="section-capture">
      <div class="section-title">
        {% if section.settings.section_subtitle != '' %}
        <span class="sub-title">{{ section.settings.section_subtitle }}</span>
        {% endif %}
        {% if section.settings.section_title != '' %}
        <h2>{{ section.settings.section_title }}</h2>
        {% endif %}
      </div>
    </div>
    <div class="steps-wrapper">
      {% for block in section.blocks %}
        <div class="step-card">
          {{ block.settings.step_image |
            image_url: width: 600 | image_tag:
            class: 'step-image',
            height: block.settings.step_image.height,
            width: block.settings.step_image.width
          }}
          <div class="step-content">
            <h3>{{ block.settings.step_title }}</h3>
            <p>{{ block.settings.step_desc }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Step By Step",
  "settings": [
    {
      "type": "header",
      "content": "Section Title"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Section Subtitle",
      "default": "Smart Business Card"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "How it works"
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "image_picker",
          "id": "step_image",
          "label": "Step Image"
        },
        {
          "type": "text",
          "id": "step_title",
          "label": "Step Title",
          "default": "How to use battery"
        },
        {
          "type": "text",
          "id": "step_desc",
          "label": "Step Description",
          "default": "Lorem Ipsum is simply dummy text of the printing typesetting industry lorem Ipsum."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Step By Step",
      "category": "step-by-step",
      "settings": {
      },
      "blocks": [

      ]
    }
  ]
}
{% endschema %}

{% style %}
  #Steps-{{ section.id }} {
    background-color: {{ section.settings.section_bg_color }};
  }
{% endstyle %}
