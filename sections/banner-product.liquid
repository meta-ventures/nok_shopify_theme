{% style %}
  .offer-banner-content .banner-content .banner-price .label {
    color: {{ section.settings.banner_price_color }};
  }
  .offer-banner-content .banner-content .banner-price .price {
    color: {{ section.settings.banner_price_color }};
  }

  .offer-banner-area {
    padding-top: {{ section.settings.section_margin_top }}px;
    padding-bottom: {{ section.settings.section_margin_bottom }}px;
  }

  .offer-banner-area .offer-banner-bg {
    padding-left: 30px;
    padding-right: 30px;
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
  }

  @media(max-width: 767px){
      .offer-banner-area {
          padding-top: {{ section.settings.section_margin_top_xs }}px;
          padding-bottom: {{ section.settings.section_margin_bottom_xs }}px;
      }
      .offer-banner-area .offer-banner-bg {
        padding-top: {{ section.settings.section_padding_top_xs }}px;
        padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
      }
  }

  .offer-banner-area .offer-banner-bg::before {
    {% if section.settings.offer_banner_bg_image_enable %}
      background-image: url('{% if section.settings.section_bg_image %}{{ section.settings.section_bg_image | image_url }}{% else %}https://dummyimage.com/1340x600{% endif %}');
      background-position: center;
      background-size: cover;
      background-repeat: no-repeat;
    {% endif %}

    {% if section.settings.section_bg_color_enable %}
      background-color: {{ section.settings.section_bg_color }};
    {% endif %}
  }
  @media(max-width: 1199px) {
    .offer-banner-area .offer-banner-bg {
        padding: {{ section.settings.section_padding_top_ip }}px {{ section.settings.section_padding_top_ip | divided_by: 2 }}px;
        margin-top: 150px;
    }
  }

  @media (max-width: 767px) {
    .offer-banner-area .offer-banner-bg {
        /* padding: {{ section.settings.section_padding_top_ip }}px 12px; */
    }
  }
{% endstyle %}
