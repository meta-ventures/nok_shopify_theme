<section class="form-contact-3">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="other-page-new-title">
                    <div class="new-title">
                        {% if section.settings.contact_us_subtitle != '' %}
                        <p>{{ section.settings.contact_us_subtitle }}</p>
                        {% endif %}
                        {% if section.settings.contact_us_title != '' %}
                        <h1>{{ section.settings.contact_us_title }}</h1>
                        {% endif %}
                    </div>
                </div>
                <div class="get-info contact-detail">
                    {%- render 'contact-modern-info' -%}
                </div>
            </div>
        </div>
    </div>
</section>
{% schema %}
{
  "name": "contact Modern Section 1",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "paragraph",
      "content": "Desktop / Laptop / tablet"
    },
    {
      "type": "range",
      "id": "contact_us_3_padding_top",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 100
    },
    {
      "type": "range",
      "id": "contact_us_3_padding_bottom",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 100
    },
    {
      "type": "paragraph",
      "content": "Ipad pro / Ipad"
    },
    {
      "type": "range",
      "id": "contact_us_3_padding_top_ip",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "contact_us_3_padding_bottom_ip",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 80
    },
    {
      "type": "paragraph",
      "content": "Mobile"
    },
    {
      "type": "range",
      "id": "contact_us_3_padding_top_xs",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "contact_us_3_padding_bottom_xs",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 60
    },
    {
      "type": "header",
      "content": "Section Background Color"
    },
    {
      "type": "color",
      "id": "contact_us_3_bgcolor",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "checkbox",
      "id": "contact_us_3_bgcolor_enable",
      "label": "Show Background Color",
      "default": true
    },
    {
      "type": "header",
      "content": "Section Content"
    },
    {
      "type": "text",
      "id": "contact_us_subtitle",
      "label": "Sub Title",
      "default": "Keep in touch with us"
    },
    {
      "type": "text",
      "id": "contact_us_title",
      "label": "Title",
      "default": "Quick support"
    }
  ],
  "presets": [
    {
      "name": "contact Modern Section 1",
      "category": "contact Modern Section 1"
    }
  ]
}
{% endschema %}
<style>
    .form-contact-3{
        padding-top: {{ section.settings.contact_us_3_padding_top }}px;
        padding-bottom: {{ section.settings.contact_us_3_padding_bottom }}px;
        {% if section.settings.contact_us_3_bgcolor_enable %}
        background-color: {{ section.settings.contact_us_3_bgcolor }};
        {% endif %}
    }
    @media (max-width: 1199px) {
        .form-contact-3{
            padding-top: {{ section.settings.contact_us_3_padding_top_ip }}px;
            padding-bottom: {{ section.settings.contact_us_3_padding_bottom_ip }}px;
        }
    }
    @media (max-width: 767px) {
        .form-contact-3{
            padding-top: {{ section.settings.contact_us_3_padding_top_xs }}px;
            padding-bottom: {{ section.settings.contact_us_3_padding_bottom_xs }}px;
        }
    }

    /* get touch css */
    .form-contact-3 ul.contact-info-list{
        display: -ms-flexbox;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        {% if settings.enable_rtl %}
        margin: -30px -30px 0px 0px;
        {% else %}
        margin: -30px 0px 0px -30px;
        {% endif %}
    }
    .form-contact-3 ul.contact-info-list li.ftcon-li{
        width: calc(33.33% - 30px);
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 30px;
        {% if settings.enable_rtl %}
        margin: 30px 30px 0px 0px;
        {% else %}
        margin: 30px 0px 0px 30px;
        {% endif %}
        border: 1px solid #e2e2e2;

    }
    @media (max-width: 991px) {
        .form-contact-3 ul.contact-info-list li.ftcon-li{
            width: calc(100% - 30px);
            {% if settings.enable_rtl %}
            margin: 30px 30px 0px 0px;
            {% else %}
            margin: 30px 0px 0px 30px;
            {% endif %}
        }
    }
    @media (max-width: 767px) {
        .form-contact-3 ul.contact-info-list{
            {% if settings.enable_rtl %}
            margin: -30px -15px 0px 0px;
            {% else %}
            margin: -30px 0px 0px -15px;
            {% endif %}
        }
        .form-contact-3 ul.contact-info-list li.ftcon-li{
            width: calc(100% - 15px);
            padding: 30px 15px;
            {% if settings.enable_rtl %}
            margin: 30px 15px 0px 0px;
            {% else %}
            margin: 30px 0px 0px 15px;
            {% endif %}
        }
    }

    .form-contact-3 ul.contact-info-list li.ftcon-li span{
        display: block;
    }
    .form-contact-3 ul.contact-info-list li.ftcon-li span.con-icon{
        font-size: 24px;
        color: var(--font-color-primary);
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        border: 2px solid var(--font-color-primary);
        border-radius: 100%;
        line-height: 0;
    }
    .form-contact-3 ul.contact-info-list li.ftcon-li:hover span.con-icon{
        color: #fff;
        background-color: var(--font-color-primary);
    }
    .form-contact-3 ul.contact-info-list li.ftcon-li span.con-icon,
    .form-contact-3 ul.contact-info-list li.ftcon-li:hover span.con-icon{
        -webkit-transition: all 0.3s ease-in-out 0s;
        -o-transition: all 0.3s ease-in-out 0s;
        transition: all 0.3s ease-in-out 0s;
    }
    .form-contact-3 ul.contact-info-list li.ftcon-li span.con-icon::after {
        content: '';
        position: absolute;
        top: 0;
        {% if settings.enable_rtl %}
        right: 0;
        {% else %}
        left: 0;
        {% endif %}
        width: 100%;
        height: 100%;
        opacity: 0;
        box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.1);
    }
    .form-contact-3 ul.contact-info-list li.ftcon-li:hover span.con-icon::after{
        -webkit-animation: hovereffect 1s ease-out 75ms;
        -moz-animation: hovereffect 1s ease-out 75ms;
        animation: hovereffect 1s ease-out 75ms;
    }
    @-webkit-keyframes hovereffect{
        0%{
            opacity: 0.3;
            border-radius: 100%;
        }
        40%{
            opacity: 0.5;
            box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.1),0 0 5px 5px var(--font-color-primary),0 0 0 5px rgba(0, 0, 0, 0.5);
            border-radius: 100%;
        }
        100%{
            box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.1),0 0 5px 5px var(--font-color-primary),0 0 0 5px rgba(0, 0, 0, 0.5);
            -webkit-transform: scale(1.2);
            -moz-transform: scale(1.2);
            -ms-transform: scale(1.2);
            transform: scale(1.2);
            opacity: 0;
            border-radius: 100%;
        }
    }
    @-moz-keyframes hovereffect{
        0%{
            opacity: 0.3;
            border-radius: 100%;
        }
        40%{
            opacity: 0.5;
            box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.1),0 0 5px 5px var(--font-color-primary),0 0 0 5px rgba(0, 0, 0, 0.5);
            border-radius: 100%;
        }
        100%{
            box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.1),0 0 5px 5px var(--font-color-primary),0 0 0 5px rgba(0, 0, 0, 0.5);
            -webkit-transform: scale(1.2);
            -moz-transform: scale(1.2);
            -ms-transform: scale(1.2);
            transform: scale(1.2);
            opacity: 0;
            border-radius: 100%;
        }
    }
    @keyframes hovereffect{
        0%{
            opacity: 0.3;
            border-radius: 100%;
        }
        40%{
            opacity: 0.5;
            box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.1),0 0 5px 5px var(--font-color-primary),0 0 0 5px rgba(0, 0, 0, 0.5);
            border-radius: 100%;
        }
        100%{
            box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.1),0 0 5px 5px var(--font-color-primary),0 0 0 5px rgba(0, 0, 0, 0.5);
            -webkit-transform: scale(1.2);
            -moz-transform: scale(1.2);
            -ms-transform: scale(1.2);
            transform: scale(1.2);
            opacity: 0;
            border-radius: 100%;
        }
    }
    .form-contact-3 ul.contact-info-list li.ftcon-li span.con-add,
    .form-contact-3 ul.contact-info-list li.ftcon-li a.con-add{
        color: var(--font-color-body);
        margin-top: 25px;
    }
    .form-contact-3 ul.contact-info-list li.ftcon-li span.con-add span{
        margin-top: 4px;
    }
    .form-contact-3 ul.contact-info-list li.ftcon-li span.con-add span:first-child{
        margin-top: 0px;
    }
</style>
