<section class="privacy-policy-info">
	<div class="container">
		<div class="row">
			<div class="col">
				<div class="info-block">
					<ul class="info-block-ul">
						{% for block in section.blocks %}
						<li class="info-block-li">
							<div class="info-block-item">
								{% if block.settings.info_title != '' %}
								<h4 class="title">{{ block.settings.info_title }}</h4>
								{% endif %}
								{% if block.settings.info_desc != '' %}
								<p class="desc">{{ block.settings.info_desc }}</p>
								{% endif %}
							</div>
						</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>
	</div>
</section>

{% schema %}
{
  "name": "Privacy Policy Info",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "paragraph",
      "content": "Desktop / Laptop / tablet"
    },
    {
      "type": "range",
      "id": "about_product_padding_top",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 100
    },
    {
      "type": "range",
      "id": "about_product_padding_bottom",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 100
    },
    {
      "type": "paragraph",
      "content": "Ipad pro / Ipad"
    },
    {
      "type": "range",
      "id": "about_product_padding_top_ip",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "about_product_padding_bottom_ip",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 80
    },
    {
      "type": "paragraph",
      "content": "Mobile"
    },
    {
      "type": "range",
      "id": "about_product_padding_top_xs",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "about_product_padding_bottom_xs",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 60
    },
    {
      "type": "header",
      "content": "Section Background Color"
    },
    {
      "type": "checkbox",
      "id": "section_background_color_enable",
      "label": "Show Background Color",
      "default": true
    },
    {
      "type": "color",
      "id": "section_background_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    }
  ],
  "blocks": [
    {
      "name": "Privacy Policy Info",
      "type": "info_block",
      "limit": 3,
      "settings": [
        {
          "type": "header",
          "content": "Information Text"
        },
        {
          "type": "text",
          "id": "info_title",
          "label": "Info Title",
          "default": "Budo privacy policy"
        },
        {
          "type": "textarea",
          "id": "info_desc",
          "label": "Description",
          "default": "If you put a key under the mat for the cops, a burglar can find it, too. Criminals are using every technology tool at their disposal to hack into people accounts."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Privacy Policy Info",
      "category": "Privacy Policy Info"
    }
  ]
}
{% endschema %}
<style>
.privacy-policy-info {
    position: relative;
    padding-top: {{ section.settings.about_product_padding_top }}px;
    padding-bottom: {{ section.settings.about_product_padding_bottom }}px;
    {% if section.settings.section_background_color_enable %}
    background-color: {{ section.settings.section_background_color }};
    {% endif %}
}
@media (max-width: 1199px) {
    .privacy-policy-info {
        padding-top: {{ section.settings.about_product_padding_top_ip }}px;
        padding-bottom: {{ section.settings.about_product_padding_bottom_ip }}px;
    }
}
@media (max-width: 767px) {
    .privacy-policy-info {
        padding-top: {{ section.settings.about_product_padding_top_xs }}px;
        padding-bottom: {{ section.settings.about_product_padding_bottom_xs }}px;
    }
}

.privacy-policy-info .info-block ul.info-block-ul {
	display: flex;
	flex-wrap: wrap;
	justify-content: center;
	margin-top: -30px;
	{% if settings.enable_rtl %}
    margin-right: -30px;
    {% else %}
    margin-left: -30px;
    {% endif %}
}
.privacy-policy-info .info-block ul.info-block-ul li.info-block-li {
	width: calc(33.33% - 30px);
	margin-top: 30px;
	{% if settings.enable_rtl %}
    margin-right: 30px;
    {% else %}
    margin-left: 30px;
    {% endif %}
}
.privacy-policy-info .info-block ul.info-block-ul li.info-block-li .info-block-item h4.title {
	font-size: 18px;
	font-weight: 700;
	line-height: 1;
	text-transform: uppercase;
}
.privacy-policy-info .info-block ul.info-block-ul li.info-block-li .info-block-item p.desc {
	font-size: 18px;
	margin-top: 19px;
	width: 85%;
	line-height: 30px;
}
@media (max-width: 1280px) {
	.privacy-policy-info .info-block ul.info-block-ul li.info-block-li .info-block-item p.desc {
		width: 95%;
	}
}
@media (max-width: 1199px) {
	.privacy-policy-info .info-block ul.info-block-ul li.info-block-li .info-block-item p.desc { 
		width: 100%;
	}
}
@media (max-width: 991px) {
	.privacy-policy-info .info-block ul.info-block-ul li.info-block-li {
		width: calc(50% - 30px);
	}
	.privacy-policy-info .info-block ul.info-block-ul li.info-block-li .info-block-item h4.title {
		font-size: 16px;
	}
	.privacy-policy-info .info-block ul.info-block-ul li.info-block-li .info-block-item p.desc {
		font-size: 16px;
		margin-top: 8px;
	}
}
@media (max-width: 600px) {
	.privacy-policy-info .info-block ul.info-block-ul {
		{% if settings.enable_rtl %}
	    margin-right: 0px;
	    {% else %}
	    margin-left: 0px;
	    {% endif %}
	}
	.privacy-policy-info .info-block ul.info-block-ul li.info-block-li {
		width: calc(100% - 0px);
		{% if settings.enable_rtl %}
	    margin-right: 0px;
	    {% else %}
	    margin-left: 0px;
	    {% endif %}
	}
}
</style>