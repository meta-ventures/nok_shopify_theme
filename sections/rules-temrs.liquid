<section class="rules-terms">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="terms-rulse-block">
          <ul class="terms-rulse-ul">
            {% for block in section.blocks %}
            {% case block.type %}
            {% when 'terms_rulse_1' %}
            {% if block.settings.terms_rulse_text_1 != '' %}
            <li class="terms-rulse-li">
              <p>{{ block.settings.terms_rulse_text_1 }}</p>
            </li>
            {% endif %}
            {% endcase %}
            {% endfor %}
          </ul>
          <ul class="terms-rulse-ul">
            {% for block in section.blocks %}
            {% case block.type %}
            {% when 'terms_rulse_2' %}
            {% if block.settings.terms_rulse_text_2 != '' %}
            <li class="terms-rulse-li">
              <p>{{ block.settings.terms_rulse_text_2 }}</p>
            </li>
            {% endif %}
            {% endcase %}
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Rules & Terms",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "paragraph",
      "content": "Desktop / Laptop / tablet"
    },
    {
      "type": "range",
      "id": "about_product_padding_top",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "about_product_padding_bottom",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0
    },
    {
      "type": "paragraph",
      "content": "Ipad pro / Ipad"
    },
    {
      "type": "range",
      "id": "about_product_padding_top_ip",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "about_product_padding_bottom_ip",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0
    },
    {
      "type": "paragraph",
      "content": "Mobile"
    },
    {
      "type": "range",
      "id": "about_product_padding_top_xs",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "about_product_padding_bottom_xs",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 0
    },
    {
      "type": "header",
      "content": "Section Background Color"
    },
    {
      "type": "checkbox",
      "id": "about_product_bgcolor_enable",
      "label": "Show Background Color",
      "default": false
    },
    {
      "type": "color",
      "id": "about_product_bgcolor",
      "label": "Background Color",
      "default": "#FFFFFF"
    }
  ],
  "blocks": [
    {
      "type": "terms_rulse_1",
      "name": "Rules & Terms 1",
      "settings": [
        {
          "type": "textarea",
          "id": "terms_rulse_text_1",
          "label": "Description",
          "default": "There are many variations of passages Lorem Ipsum available but the majority have suffered alteration in slightly believable."
        }
      ]
    },
    {
      "type": "terms_rulse_2",
      "name": "Rules & Terms 2",
      "settings": [
        {
          "type": "textarea",
          "id": "terms_rulse_text_2",
          "label": "Description",
          "default": "There are many variations of passages Lorem Ipsum available but the majority have suffered alteration in slightly believable."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Rules & Terms",
      "category": "Other Page"
    }
  ]
}
{% endschema %}
<style>
.rules-terms {
  position: relative;
  padding-top: {{ section.settings.about_product_padding_top }}px;
  padding-bottom: {{ section.settings.about_product_padding_bottom }}px;
  {% if section.settings.about_product_bgcolor_enable %}
  background-color: {{ section.settings.about_product_bgcolor }};
  {% endif %}
}
@media (max-width: 1199px) {
  .rules-terms {
    padding-top: {{ section.settings.about_product_padding_top_ip }}px;
    padding-bottom: {{ section.settings.about_product_padding_bottom_ip }}px;
  }
}
@media (max-width: 767px) {
  .rules-terms {
    padding-top: {{ section.settings.about_product_padding_top_xs }}px;
    padding-bottom: {{ section.settings.about_product_padding_bottom_xs }}px;
  }
}

.rules-terms .terms-rulse-block {
  display: flex;
  flex-wrap: wrap;
  {% if settings.enable_rtl %}
  margin-right: -30px;
  {% else %}
  margin-left: -30px;
  {% endif %}
}
.rules-terms .terms-rulse-block ul.terms-rulse-ul {
  width: calc(50% - 30px);
  {% if settings.enable_rtl %}
  margin-right: 30px;
  {% else %}
  margin-left: 30px;
  {% endif %}
}
.rules-terms .terms-rulse-block ul.terms-rulse-ul li.terms-rulse-li {
  position: relative;
  {% if settings.enable_rtl %}
  padding-right: 15px;
  {% else %}
  padding-left: 15px;
  {% endif %}
  margin-top: 23px;
}
.rules-terms .terms-rulse-block ul.terms-rulse-ul li.terms-rulse-li:first-child {
  margin-top: 0px;
}
.rules-terms .terms-rulse-block ul.terms-rulse-ul li.terms-rulse-li::before {
  background-color: var(--font-color-paragraph);
  content: '';
  position: absolute;
  bottom: 50%;
  transform: translateY(50%);
  {% if settings.enable_rtl %}
  right: 0px;
  {% else %}
  left: 0px;
  {% endif %}
  width: 5px;
  height: 5px;
  border-radius: 100%;
} 
.rules-terms .terms-rulse-block ul.terms-rulse-ul li.terms-rulse-li p {
  color: var(--font-color-paragraph);
  width: 85%;
  font-size: 18px;
  line-height: 30px;
}
@media (max-width: 1280px) {
  .rules-terms .terms-rulse-block ul.terms-rulse-ul li.terms-rulse-li p {
    width: 100%;
  }
}
@media (max-width: 991px) {
  .rules-terms .terms-rulse-block ul.terms-rulse-ul li.terms-rulse-li p {
    font-size: 16px;
  }
}
@media (max-width: 600px) {
  .rules-terms .terms-rulse-block {
    {% if settings.enable_rtl %}
    margin-right: 0px;
    {% else %}
    margin-left: 0px;
    {% endif %}
  }
  .rules-terms .terms-rulse-block ul.terms-rulse-ul {
    width: calc(100% - 0px);
    {% if settings.enable_rtl %}
    margin-right: 0px;
    {% else %}
    margin-left: 0px;
    {% endif %}
    margin-top: 21px;
  }
  .rules-terms .terms-rulse-block ul.terms-rulse-ul:first-child {
    margin-top: 0px;
  }
  .rules-terms .terms-rulse-block ul.terms-rulse-ul li.terms-rulse-li {
    margin-top: 11px;
  }
}
</style>