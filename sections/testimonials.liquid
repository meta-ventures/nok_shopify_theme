<section class="testimonial-area" {% if section.settings.testi_bgimg_check %} style="background-image: url('{% if section.settings.testi_bgimg %}{{ section.settings.testi_bgimg | image_url }}{% else %}https://via.placeholder.com/1920x610{% endif %}');"{% endif %}>
  <div class="container">
    <div class="row">
      <div class="col">
          <div class="section-capture">
            <div class="section-title">
              {% if section.settings.testi_title != '' %}
              <h2>
                {{ section.settings.testi_title }}
              </h2>
              {% endif %}
            </div>
          </div>
          <div class="testimonial-slider swiper-container" id="testimonial-{{ section.id }}">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
              <div class="swiper-slide">
                  <div class="testi-info">
                    <div class="testi-desc">
                      <p>{{ block.settings.testi_desc_review }}</p>
                    </div>
                    <div class="testi-review">
                      <i class="{{ block.settings.testi_review_icon }}" style="color: {{ block.settings.testi_review_icon_color }};"></i>
                      <i class="{{ block.settings.testi_review_icon }}" style="color: {{ block.settings.testi_review_icon_color }};"></i>
                      <i class="{{ block.settings.testi_review_icon }}" style="color: {{ block.settings.testi_review_icon_color }};"></i>
                      <i class="{{ block.settings.testi_review_icon }}" style="color: {{ block.settings.testi_review_icon_color }};"></i>
                      <i class="{{ block.settings.testi_review_icon }}" style="color: {{ block.settings.testi_review_icon_color }};"></i>
                    </div>
                    <div class="testi-author">
                      <h6>{{ block.settings.testi_authr_name }}</h6>
                      <span>{{ block.settings.testi_authr_bio }}</span>
                    </div>
                  </div>
              </div>
              {%- endfor -%}
            </div>
            <div class="swiper-arrow">
              <div class="swiper-button swiper-button-prev-{{ section.id }}"><i class="ri-arrow-left-line"></i></div>
              <div class="swiper-button swiper-button-next-{{ section.id }}"><i class="ri-arrow-right-line"></i></div>
            </div>
          </div>
      </div>
    </div>
  </div>
</section>
<script>
addEventListener('DOMContentLoaded', (event) => {
  var swiper = new Swiper('#testimonial-{{ section.id }}', {
    slidesPerView: 1,
    spaceBetween: 30,
    observer: true,
    loop: true,
    observeParents: true,
    {%- if settings.enable_rtl -%}
    rtl: true,
    {%- endif -%}
    navigation: {
      nextEl: '.swiper-button-next-{{ section.id }}',
      prevEl: '.swiper-button-prev-{{ section.id }}',
    },
    breakpoints: {
      0: {
        slidesPerView: 1,
        spaceBetween: 15
      },
      479: {
        slidesPerView: 1,
        spaceBetween: 15
      },
      540: {
        slidesPerView: 1,
        spaceBetween: 15
      },
      768: {
        slidesPerView: 1,
        spaceBetween: 15
      },
      979: {
        slidesPerView: 1,
        spaceBetween: 15
      },
      1199: {
        slidesPerView: 1,
        spaceBetween: 20
      }
    }
  });
});
</script>
