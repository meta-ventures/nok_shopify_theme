<style>
.testimonial-area{
  padding-top: {{ section.settings.testi_padding_top }}px;
  padding-bottom: {{ section.settings.testi_padding_bottom }}px;
  {% if section.settings.testi_bgimg_check %}
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  position: relative;
  z-index: 1;
  {% endif %}
  background-color: {{ section.settings.testi_bgcolor }};
}
@media (max-width: 1199px) {
  .testimonial-area{
    padding-top: {{ section.settings.testi_padding_top_ip }}px;
    padding-bottom: {{ section.settings.testi_padding_bottom_ip }}px;
  }
}
@media (max-width: 767px) {
  .testimonial-area{
    padding-top: {{ section.settings.testi_padding_top_xs }}px;
    padding-bottom: {{ section.settings.testi_padding_bottom_xs }}px;
  }
}

/* testi content css */
.testimonial-area .testi-info {
  width: 55%;
  margin: 0 auto;
  text-align: center;
}
.testimonial-area .testi-info .testi-desc {
  text-align: center;
}
.testimonial-area .testi-info .testi-desc p {
  color: var(--font-color-body);
  font-size: 24px;
  line-height: 36px;
}
.testimonial-area .testi-info .testi-review {
  margin-top: 40px;
}
.testimonial-area .testi-info .testi-review i {
  font-size: 16px;
  {% if settings.enable_rtl %}
  margin-right: 5px;
  {% else %}
  margin-left: 5px;
  {% endif %}
}
.testimonial-area .testi-info .testi-review i:first-child {
  {% if settings.enable_rtl %}
  margin-right: 0px;
  {% else %}
  margin-left: 0px;
  {% endif %}
}
.testimonial-area .testi-info .testi-author {
  margin-top: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.testimonial-area .testi-info .testi-author h6 {
  position: relative;
  font-size: 16px;
  {% if settings.enable_rtl %}
  margin-left: 15px;
  padding-left: 15px;
  {% else %}
  margin-right: 15px;
  padding-right: 15px;
  {% endif %}
  font-weight: 700;
  line-height: 1;
  text-transform: uppercase;
}
.testimonial-area .testi-info .testi-author h6::before {
  background-color: #616161;
  content: '';
  position: absolute;
  bottom: 50%;
  transform: translateY(50%);
  {% if settings.enable_rtl %}
  left: -5px;
  {% else %}
  right: -5px;
  {% endif %}
  width: 10px;
  height: 2px;
}
.testimonial-area .testi-info .testi-author span {
  font-size: 16px;
  font-weight: 500;
  text-transform: uppercase;
}
@media (max-width: 1359px) {
  .testimonial-area .testi-info {
    width: 60%;
  }
}
@media (max-width: 1199px) {
  .testimonial-area .testi-info .testi-desc p {
    font-size: 20px;
  }
}
@media (max-width: 991px) {
  .testimonial-area .testi-info {
    width: 80%;
  }
  .testimonial-area .testi-info .testi-desc p {
    font-size: 18px;
  }
}
@media (max-width: 767px) {
  .testimonial-area .testi-info {
    width: 100%;
  }
  .testimonial-area .testi-info .testi-desc p {
    font-size: 16px;
    line-height: 30px;
  }
  .testimonial-area .testi-info .testi-review {
    margin-top: 20px;
  }
  .testimonial-area .testi-info .testi-author h6 {
    font-size: 14px;
  }
  .testimonial-area .testi-info .testi-author span {
    font-size: 14px;
  }
}

/* swiper button css */
.testimonial-area .testimonial-slider .swiper-arrow .swiper-button {
  position: absolute;
  bottom: 50%;
  transform: translateY(50%);
  z-index: 2;
}
.testimonial-area .testimonial-slider .swiper-arrow ..swiper-button-prev-{{ section.id }} {
  {% if settings.enable_rtl %}
  right: 0px;
  {% else %}
  left: 0px;
  {% endif %}
}
.testimonial-area .testimonial-slider .swiper-arrow .swiper-button-next-{{ section.id }} {
  {% if settings.enable_rtl %}
  left: 0px;
  {% else %}
  right: 0px;
  {% endif %}
}
@media (max-width: 767px) {
  .testimonial-area .testimonial-slider .swiper-arrow {
    justify-content: center;
    margin-top: 30px;
  }
  .testimonial-area .testimonial-slider .swiper-arrow .swiper-button {
    position: unset;
    transform: unset;
  }
}
