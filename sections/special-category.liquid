<section class="special-category collection-category-{{ section.id }}" {% if section.settings.section_bg_image_enable %}style="background-image: url('{% if section.settings.section_bg_image %}{{ section.settings.section_bg_image | image_url }}{% else %}https://dummyimage.com/1920x1024{% endif %}');"{% endif %}>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="section-capture">
          <div class="section-title">
            {% if section.settings.section_subtitle != '' %}
            <span class="sub-title">{{ section.settings.section_subtitle }}</span>
            {% endif %}
            {% if section.settings.section_title != '' %}
            <h2>{{ section.settings.section_title }}</h2>
            {% endif %}
          </div>
        </div>
        <div class="product-slider">
          {% assign category_product = collections[section.settings.special_label_product] %}
          <div class="collection-slider swiper-container" id="pro-{{ section.id }}">
            <div class="swiper-wrapper">
              {% assign category_product_limit = section.settings.category_special_product_limit_handle %}
              {% for product in category_product.products limit: category_product_limit %}
              <div class="swiper-slide">
                {% render 'product-grid-item' %}
              </div>
              {% endfor %}
            </div>
          </div>
          <div class="swiper-arrow">
            <button class="swiper-button swiper-button-prev-{{ section.id }}"><i class="ri-arrow-left-line"></i></button>
            <button class="swiper-button swiper-button-next-{{ section.id }}"><i class="ri-arrow-right-line"></i></button>
          </div>
        </div>
    </div>
  </div>
</section>
<script type="text/javascript">
  addEventListener('DOMContentLoaded', (event) => {
    var swiper = new Swiper('#pro-{{ section.id }}', {
      slidesPerColumn: {{ section.settings.product_col }},
      slidesPerView: {{ section.settings.slide_product_limit }},
      spaceBetween: 30,
      observer: true,
      loop: false,
      observeParents: true,
      {%- if settings.enable_rtl -%}
      rtl: true,
      {%- endif -%}
      navigation: {
        nextEl: '.swiper-button-next-{{ section.id }}',
        prevEl: '.swiper-button-prev-{{ section.id }}',
      },
      breakpoints: {
        0: {
          slidesPerView: 1,
          spaceBetween: 12
        },
        360: {
          slidesPerView: 1,
          spaceBetween: 12
        },
        479: {
          slidesPerView: 2,
          spaceBetween: 12
        },
        640: {
          slidesPerView: 2,
          spaceBetween: 12
        },
        767: {
          slidesPerView: 3,
          spaceBetween: 12
        },
        768: {
          slidesPerView: 3,
        },
        979: {
          slidesPerView: 3,
        },
        1199: {
          slidesPerView: 3,
        }
      }
    });
  });
</script>
