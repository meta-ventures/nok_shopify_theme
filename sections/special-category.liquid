<style>
  .collection-category-{{ section.id }}{
    padding-top: {{ section.settings.category_special_padding_top }}px;
    padding-bottom: {{ section.settings.category_special_padding_bottom }}px;
    {% if section.settings.section_bg_image_enable %}
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    {% endif %}
    {% if section.settings.section_bg_color_enable %}
    background-color: {{ section.settings.section_bg_color }};
    {% endif %}
  }
  .special-category .product-slider {
    position: relative;
  }
  .special-category .product-slider .collection-slider {
    margin: -15px;
    padding: 15px;
  }
  .special-category .product-slider .swiper-arrow {
    margin-top: 0px;
  }
  .special-category .product-slider .swiper-arrow button {
    position: absolute;
    bottom: 50%;
    transform: translateY(50%);
    z-index: 2;
  }
  .special-category .product-slider .swiper-arrow button.swiper-button-prev-{{ section.id }} {
    {% if settings.enable_rtl %}
    right: -140px;
    {% else %}
    left: -140px;
    {% endif %}
  }
  .special-category .product-slider .swiper-arrow button.swiper-button-next-{{ section.id }} {
    {% if settings.enable_rtl %}
    left: -140px;
    {% else %}
    right: -140px;
    {% endif %}
  }
  @media (max-width: 1499px) {
    .special-category .product-slider .swiper-arrow button.swiper-button-prev-{{ section.id }} {
      {% if settings.enable_rtl %}
      right: -70px;
      {% else %}
      left: -70px;
      {% endif %}
    }
    .special-category .product-slider .swiper-arrow button.swiper-button-next-{{ section.id }} {
      {% if settings.enable_rtl %}
      left: -70px;
      {% else %}
      right: -70px;
      {% endif %}
    }
  }
  @media (max-width: 1399px) {
    .special-category .product-slider .swiper-arrow button.swiper-button-prev-{{ section.id }} {
      {% if settings.enable_rtl %}
      right: -30px;
      {% else %}
      left: -30px;
      {% endif %}
    }
    .special-category .product-slider .swiper-arrow button.swiper-button-next-{{ section.id }} {
      {% if settings.enable_rtl %}
      left: -30px;
      {% else %}
      right: -30px;
      {% endif %}
    }
  }
  @media (max-width: 1199px) {
    .collection-category-{{ section.id }}{
      padding-top: {{ section.settings.category_special_padding_top_ip }}px;
      padding-bottom: {{ section.settings.category_special_padding_bottom_ip }}px;
    }
    .special-category .product-slider .swiper-arrow {
      justify-content: center;
      margin-top: 40px;
    }
    .special-category .product-slider .swiper-arrow button {
      position: unset;
      transform: unset;
    }
  }
  @media (max-width: 767px) {
    .collection-category-{{ section.id }}{
      padding-top: {{ section.settings.category_special_padding_top_xs }}px;
      padding-bottom: {{ section.settings.category_special_padding_bottom_xs }}px;
    }
    .special-category .product-slider .swiper-arrow {
      margin-top: 30px;
    }
  }
</style>
