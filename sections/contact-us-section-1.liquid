<section class="contact-info-area">
	<div class="container">
		<div class="row">
			<div class="col">
				<div class="contact-info-main">
					<div class="contact-info-block">
						{% render 'company-address' %}
					</div>
					<div class="contact-info-image">
						<span>
							<img width="{{ section.settings.contact_info_image.width }}" height="{{ section.settings.contact_info_image.height }}" class="img-fluid" src="{% if section.settings.contact_info_image %}{{ section.settings.contact_info_image | image_url }}{% else %}https://dummyimage.com/775x680/232323/999999{% endif %}" alt="">
						</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

{% schema %}
{
  "name": "Contact Us Section 1",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "paragraph",
      "content": "Desktop / Laptop / tablet"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 100
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 100
    },
    {
      "type": "paragraph",
      "content": "Ipad pro / Ipad"
    },
    {
      "type": "range",
      "id": "section_padding_top_ip",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "section_padding_bottom_ip",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 80
    },
    {
      "type": "paragraph",
      "content": "Mobile"
    },
    {
      "type": "range",
      "id": "section_padding_top_xs",
      "label": "Section Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "section_padding_bottom_xs",
      "label": "Section Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 60
    },
    {
      "type": "header",
      "content": "Section Background Color"
    },
    {
      "type": "checkbox",
      "id": "section_background_color_enable",
      "label": "Show Background Color",
      "default": true
    },
    {
      "type": "color",
      "id": "section_background_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "About Image"
    },
    {
      "type": "image_picker",
      "id": "contact_info_image",
      "label": "Info Image",
      "info": "Recommended Size: 775px x 680px"
    }
  ],
  "presets": [
    {
      "name": "Contact Us Section 1",
      "category": "Contact Us Section 1"
    }
  ]
}
{% endschema %}

<style>
  .contact-info-area {
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
    {% if section.settings.section_background_color_enable %}
    background-color: {{ section.settings.section_background_color }};
    {% endif %}
  }
  @media (max-width: 1199px){
    .contact-info-area {
      padding-top: {{ section.settings.section_padding_top_ip }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_ip }}px;
    }
  }
  @media (max-width: 767px){
    .contact-info-area {
      padding-top: {{ section.settings.section_padding_top_xs }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
    }
  }

  .contact-info-area .contact-info-main {
  	display: flex;
  	flex-wrap: wrap;
  	align-items: center;
  }
  .contact-info-area .contact-info-main .contact-info-block {
  	width: 41.67%;
  }
  .contact-info-area .contact-info-main .contact-info-image {
  	width: 58.33%;
  }
  @media (max-width: 991px) {
  	.contact-info-area .contact-info-main .contact-info-block {
  		width: 100%;
  		order: 1;
  		margin-top: 47px;
  	}
  	.contact-info-area .contact-info-main .contact-info-image {
  		width: 100%;
  	}
  }
  @media (max-width: 479px) {
  	.contact-info-area .contact-info-main .contact-info-block {
  		margin-top: 27px;
  	}
  }
</style>
