<style>
  .feature-info {
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;

    {% if section.settings.section_bg_image_enable %}
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    position: relative;
    {% endif %}
    {% if section.settings.section_bg_color_enable %}
    background-color: {{ section.settings.section_bg_color }};
    {% endif %}
  }
  @media(max-width: 1199px){
    .feature-info {
      padding-top: {{ section.settings.section_padding_top_ip }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_ip }}px;
    }
  }
  @media(max-width: 767px){
    .feature-info {
      padding-top: {{ section.settings.section_padding_top_xs }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
    }
  }
  /* main css */
  .feature-info .feature-area ul.service-ul {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    {% if settings.enable_rtl %}
    margin-right: -30px;
    {% else %}
    margin-left: -30px;
    {% endif %}
    margin-top: -40px;
  }
  .feature-info .feature-area ul.service-ul li.service-li {
    width: calc(25% - 30px);
    {% if settings.enable_rtl %}
    margin-right: 30px;
    {% else %}
    margin-left: 30px;
    {% endif %}
    margin-top: 40px;
  }
  .feature-info .feature-area ul.service-ul li.service-image-li {
    width: calc(50% - 30px);
    {% if settings.enable_rtl %}
    margin-right: 30px;
    {% else %}
    margin-left: 30px;
    {% endif %}
    margin-top: 40px;
    padding: 0px 40px;
    text-align: center;
  }
  @media (max-width: 1199px) {
    .feature-info .feature-area ul.service-ul li.service-li {
      width: calc(30% - 30px);
    }
    .feature-info .feature-area ul.service-ul li.service-image-li {
      width: calc(40% - 30px);
      padding: 0px 30px;
    }
  }
  @media (max-width: 991px) {
    .feature-info .feature-area ul.service-ul li.service-li {
      width: calc(50% - 30px);
    }
    .feature-info .feature-area ul.service-ul li.service-image-li {
      width: calc(100% - 30px);
      padding: 0px;
      order: -1;
    }
  }
  @media (max-width: 767px) {
    .feature-info .feature-area ul.service-ul {
      {% if settings.enable_rtl %}
      margin-right: -12px;
      {% else %}
      margin-left: -12px;
      {% endif %}
    }
    .feature-info .feature-area ul.service-ul li.service-li {
      width: calc(50% - 12px);
      {% if settings.enable_rtl %}
      margin-right: 12px;
      {% else %}
      margin-left: 12px;
      {% endif %}
    }
    .feature-info .feature-area ul.service-ul li.service-image-li {
      width: calc(100% - 12px);
      {% if settings.enable_rtl %}
      margin-right: 12px;
      {% else %}
      margin-left: 12px;
      {% endif %}
    }
  }
  @media (max-width: 479px) {
    .feature-info .feature-area ul.service-ul {
      margin-top: -25px;
    }
    .feature-info .feature-area ul.service-ul li.service-li {
      width: calc(100% - 12px);
      margin-top: 25px;
    }
    .feature-info .feature-area ul.service-ul li.service-image-li {
      margin-top: 25px;
    }
  }
 
  /* service css */
  .feature-info .feature-area ul.service-ul li.service-li ul.feature-item-ul li.feature-item-li {
    display: flex;
    align-items: center;
    margin-top: 64px;
  }
  .feature-info .feature-area ul.service-ul li.service-li ul.feature-item-ul li.feature-item-li:first-child {
    margin-top: 0px;
  }
  .feature-info .feature-area ul.service-ul li.service-li ul.feature-item-ul li.feature-item-li:hover .feature-icon a {
    -webkit-transform: rotateY(180deg);
    -o-transform: rotateY(180deg);
    transform: rotateY(180deg);
  }
  .feature-info .feature-area ul.service-ul li.service-li ul.feature-item-ul li.feature-item-li .feature-icon a,
  .feature-info .feature-area ul.service-ul li.service-li ul.feature-item-ul li.feature-item-li:hover .feature-icon a {
    -webkit-transition: all 0.7s ease-in-out 0s;
    -o-transition: all 0.7s ease-in-out 0s;
    transition: all 0.7s ease-in-out 0s;
  }
  .feature-info .feature-area ul.service-ul li.service-li ul.feature-item-ul li.feature-item-li .feature-icon a img {
    width: 35px;
  }
  .feature-info .feature-area ul.service-ul li.service-li ul.feature-item-ul li.feature-item-li .feature-content {
    width: calc(100% - 35px);
  } 
  .feature-info .feature-area ul.service-ul li.service-li ul.feature-item-ul li.feature-item-li .feature-content h4.title {
    font-size: 18px;
    font-weight: 700;
    text-transform: uppercase;
  }
  .feature-info .feature-area ul.service-ul li.service-li ul.feature-item-ul li.feature-item-li .feature-content p.desc {
    color: var(--font-color-body);
    font-size: 18px;
    margin-top: 24px;
  }
  @media (max-width: 1199px){
    .feature-info .feature-area ul.service-ul li.service-li ul.feature-item-ul li.feature-item-li {
      margin-top: 25px;
    }
    .feature-info .feature-area ul.service-ul li.service-li ul.feature-item-ul li.feature-item-li .feature-content h4.title {
      font-size: 16px;
    }
    .feature-info .feature-area ul.service-ul li.service-li ul.feature-item-ul li.feature-item-li .feature-content p.desc {
      font-size: 16px;
      margin-top: 14px;
    } 
  }
</style>