{% schema %}
{
    "name": "Dual Banner",
    "settings": [
        {
            "type": "image_picker",
            "id": "desktop_banner",
            "label": "Desktop Banner Image"
        },
        {
            "type": "image_picker",
            "id": "mobile_banner",
            "label": "Mobile Banner Image"
        }
    ]
}
{% endschema %}

{% if section.settings.desktop_banner != blank %}
    <div class="banner-desktop">
        <img src="{{ section.settings.desktop_banner | img_url }}" alt="Desktop Banner">
    </div>
{% endif %}

{% if section.settings.mobile_banner != blank %}
    <div class="banner-mobile">
        <img src="{{ section.settings.mobile_banner | img_url }}" alt="Mobile Banner">
    </div>
{% endif %}

<style>
@media (min-width: 769px) {
    .banner-desktop {
        display: block;
    }
    .banner-mobile {
        display: none;
    }
}

@media (max-width: 768px) {
    .banner-desktop {
        display: none;
    }
    .banner-mobile {
        display: block;
    }
}
</style>
