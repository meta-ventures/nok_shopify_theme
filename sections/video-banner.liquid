<style>
.video-banner {
  padding-top: {{ section.settings.section_padding_top }}px;
  padding-bottom: {{ section.settings.section_padding_bottom }}px;
  {% if section.settings.section_bg_image_enable %}
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  height: 775px;
  {% endif %}
  {% if section.settings.section_bg_color_enable %}
  background-color: {{ section.settings.section_bg_color }};
  {% endif %}
  display: flex;
  align-items: center;
  justify-content: center;
}
@media(max-width: 1199px){
  .video-banner {
    padding-top: {{ section.settings.section_padding_top_ip }}px;
    padding-bottom: {{ section.settings.section_padding_bottom_ip }}px;
    {% if section.settings.section_bg_image_enable %}
    height: auto;
    {% endif %}
  }
}
@media(max-width: 767px){
  .video-banner {
    padding-top: {{ section.settings.section_padding_top_xs }}px;
    padding-bottom: {{ section.settings.section_padding_bottom_xs }}px;
  }
}
.video-banner .video-content-area {
  width: 33.33%;
  {%- if settings.enable_rtl -%}
  margin-right: auto;
  margin-left: 110px;
  {%- else -%}
  margin-left: auto;
  margin-right: 110px;
  {%- endif -%}
}
.video-banner .video-content-area .content .section-capture {
  {%- if settings.enable_rtl -%}
  text-align: right;
  {%- else -%}
  text-align: left;
  {%- endif -%}
  margin-bottom: 0px;
}
.video-banner .video-content-area .content p.desc {
	font-size: 24px;
	margin-top: 40px;
  opacity: 0.8;
}
.video-banner .video-content-area .content a.play-button {
	margin-top: 52px;
	display: flex;
	align-items: center;
}
.video-banner .video-content-area .content a.play-button span.video-icon {
  position: relative;
  background-color: #ffffff;
  width: 70px;
  height: 70px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 100%;
}
.video-banner .video-content-area .content a.play-button span.video-icon::before {
  -webkit-animation: hovereffect 2s linear infinite;
  -moz-animation: hovereffect 2s linear infinite;
  animation: hovereffect 2s linear infinite;
}
.video-banner .video-content-area .content a.play-button span.video-icon::after {
  -webkit-animation: hovereffect 4s linear infinite;
  -moz-animation: hovereffect 4s linear infinite;
  animation: hovereffect 4s linear infinite;
}
.video-banner .video-content-area .content a.play-button span.video-icon::before,
.video-banner .video-content-area .content a.play-button span.video-icon::after {
  background-color: #ffffff;
  content: '';
  position: absolute;
  top: 0;
  {%- if settings.enable_rtl -%}
  right: 0;
  {%- else -%}
  left: 0;
  {%- endif -%}
  width: 100%;
  height: 100%;
  border-radius: 100%;
}
@keyframes hovereffect {
  0%{
    opacity: 0.5;
  }
  40%{
    opacity: 0.7;
    background-color: #ffffff;
  }
  100%{
    opacity: 0;
    background-color: #ffffff;
    -webkit-transform: scale(1.3);
    -moz-transform: scale(1.3);
    -ms-transform: scale(1.3);
    transform: scale(1.3);
  }
}
.video-banner .video-content-area .content a.play-button span.video-icon i {
  background-image: var(--gradient-color);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
	font-size: 20px;
	z-index: 2;
}
.video-banner .video-content-area .content a.play-button span.text {
  color: #ffffff;
	font-size: 20px;
	{%- if settings.enable_rtl -%}
  margin-right: 30px;
  {%- else -%}
  margin-left: 30px;
  {%- endif -%}
	line-height: 1;
	font-weight: 600;
	text-transform: uppercase;
	-webkit-transition: all .3s ease-in-out 0s;
  -o-transition: all .3s ease-in-out 0s;
  transition: all .3s ease-in-out 0s;
}
@media (max-width: 1199px) {
  .video-banner .video-content-area .content p.desc {
    font-size: 20px;
  }
}
@media (max-width: 991px) {
	.video-banner .video-content-area {
    width: 50%;
    {%- if settings.enable_rtl -%}
    margin-left: 0px;
    {%- else -%}
    margin-right: 0px;
    {%- endif -%}
  }
}
@media (max-width: 767px) {
  .video-banner .video-content-area {
    width: 41.67%;
  }
	.video-banner .video-content-area .content p.desc {
    font-size: 16px;
    margin-top: 14px;
  }
  .video-banner .video-content-area .content a.play-button {
    margin-top: 19px;
  }
  .video-banner .video-content-area .content a.play-button span.video-icon {
    width: 50px;
    height: 50px;
  }
  .video-banner .video-content-area .content a.play-button span.text {
    font-size: 16px;
    {%- if settings.enable_rtl -%}
    margin-right: 15px;
    {%- else -%}
    margin-left: 15px;
    {%- endif -%}
  }
}
@media (max-width: 479px) {
  .video-banner .video-content-area {
    width: 66.67%;
  }
}

